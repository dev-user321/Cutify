@model ReservationVM 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Məlumatlarını daxil et</title>
    <link rel="stylesheet" href="~/css/enter_info_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="back-button">
                <a asp-controller="Reservation" asp-action="SelectBarber"><i class="fas fa-chevron-left"></i></a>
            </div>
        </div>
        <div class="header">
            <div class="title">Bərbərini seç</div>
        </div>

        <div class="description">
            Şəxsi məlumatlarını yazaraq rezervasiyanı asanlıqla tamamlaya bilərsən.
        </div>

        <div class="progress-bar">
            <div class="progress-section"></div>
            <div class="progress-section"></div>
        </div>

        <div class="form-container">
            <form id="user-info-form" action="/submit-reservation" method="POST">
                <div class="form-group">
                    <label for="barber-name" class="form-label">Bərbərin adı və soyadı</label>
                    <input type="text" id="barber-name" name="barber-name" class="form-input" value="@Model.BarberFullName" readonly>
                </div>

                <div class="form-row">
                    <div class="form-col">
                        <div class="form-group">
                            <label for="date" class="form-label">Tarix</label>
                            <input type="text" id="date" name="date" class="form-input" value="02/05/2025">
                        </div>
                    </div>
                    <div class="form-col">
                        <div class="form-group">
                            <label for="time" class="form-label">Saat</label>
                            <input type="text" id="time" name="time" class="form-input" value="10:30">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="full-name" class="form-label">Ad və soyadın</label>
                    <input type="text" id="full-name" name="full-name" class="form-input" placeholder="Adınızı və soyadınızı daxil edin">
                </div>

                <div class="form-group">
                    <label for="phone" class="form-label">Mobil nömrən</label>
                    <input type="tel" id="phone" name="phone" class="form-input" placeholder="+994 XX XXX XX XX">
                </div>

                <a type="submit" class="submit-button" style="text-decoration:none;" asp-controller="Reservation" asp-action="SuccessMessage">Tamamla</a>
            </form>
        </div>
    </div>
</body>
</html>