@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rezervasiyan uğurla tamamlandı!</title>
    <link rel="stylesheet" href="~/css/success_message_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .back-button {
            display: inline-block;
            margin-top: 20px;
            color: #333;
            text-decoration: none;
            font-size: 16px;
        }

            .back-button i {
                margin-right: 5px;
            }

            /* .back-button:hover { */
            /*     color: ; */
            /* } */
    </style>
</head>
<body>
    <div class="container">
       
        <div class="logo">CUTIFY</div>
        <div class="content">
            <div class="success-icon">
                <div class="checkmark"></div>
            </div>
            <h1 class="title">Rezervasiyan uğurla tamamlandı!</h1>
            <p class="message">
                Hörmətli <strong>@ViewBag.FullName</strong>, rezervasiyan uğurla tamamlandı. <br />
                Bərbərin Telefon nömrəsi: <strong>@ViewBag.PhoneNumber</strong> <br />
                Bərbərin: <strong>@ViewBag.BarberInfo</strong> <br />
                Seçilmiş vaxt: <strong>@ViewBag.Time</strong> <br />
                Yer: <strong>@ViewBag.Address</strong>
                Saat: <strong>@ViewBag.Duration</strong> 
            </p>
            <a asp-controller="Home" asp-action="Index" class="back-button">
                <i class="fas fa-arrow-left"></i> Geri qayıt
            </a>
        </div>
    </div>
</body>
</html>
