            <p class="subtitle">Görmək istədiyin tarixi seç və rezervlərini yoxla</p>
        </div>

        <div class="date-selector">
            <div>
                <div class="date-label">Tarix</div>
                <div class="date-value">02/05/2025</div>
            </div>
            <button class="search-button">Axtar</button>
        </div>

        <div class="reservations-list">
            <!-- Reservation 1 -->
            <div class="reservation-card">
                <div class="reservation-time">9:30</div>
                <div class="customer-name">Ayaz Rzayev</div>
                <div class="customer-phone">+994 11 111 11 11</div>
            </div>

            <!-- Reservation 2 -->
            <div class="reservation-card">
                <div class="reservation-time">13:00</div>
                <div class="customer-name">Emil Əliyev</div>
                <div class="customer-phone">+994 11 111 11 11</div>
            </div>

            <!-- Reservation 3 -->
            <div class="reservation-card">
                <div class="reservation-time">16:00</div>
                <div class="customer-name">Aslan İsmayılov</div>
                <div class="customer-phone">+994 11 111 11 11</div>
            </div>
        </div>
    </div>
</body>
</html>