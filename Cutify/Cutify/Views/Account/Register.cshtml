@model RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qeydiyyatdan keç</title>
    <link rel="stylesheet" href="~/css/register_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="register-container">
        <div class="back-button">
            <a asp-controller="Account" asp-action="Login"><i class="fas fa-chevron-left"></i></a>
        </div>
        <div class="register-header">
            <h1>Qeydiyyatdan keç</h1>
            <p>Şəxsi hesabını yarat və salon işlərini daha effektiv şəkildə idarə et.</p>
        </div>

        <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="profile-section">
                <div class="profile-image">
                    <div class="avatar-placeholder" id="avatar-preview">
                        <i class="fas fa-user" id="default-icon"></i>
                        <img id="profile-image-preview" style="display: none; width: 100%; height: 100%; object-fit: cover; border-radius: 50%;" alt="Profile Preview">
                    </div>
                </div>
                <div class="upload-button">
                    <label for="Image" class="upload-btn">
                        <i class="fas fa-upload"></i> Şəkil yüklə
                    </label>
                    <input type="file" id="Image" asp-for="Image" style="display: none;">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group half">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group half">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="password-field">
                    <input asp-for="Password" class="form-control" type="password" id="password" />
                    <span class="password-toggle">
                        <i class="fas fa-eye-slash" id="password-toggle-icon"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-btn">Qeydiyyatdan keç</button>

            <div class="login-link">
                <p>Hesabın var? <a asp-controller="Account" asp-action="Login">Daxil ol</a></p>
            </div>
        </form>
    </div>

    <script src="~/js/register_page.js"></script>
</body>
</html>
