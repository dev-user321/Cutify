@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qeydiyyatdan keç</title>
    <link rel="stylesheet" href="~/css/register_page.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="register-container">
        <div class="back-button">
            <a asp-controller="Account" asp-action="Login"><i class="fas fa-chevron-left"></i></a>
        </div>
        <div class="register-header">
            <h1>Qeydiyyatdan keç</h1>
            <p>Şəxsi hesabını yarat və salon işlərini daha effektiv şəkildə idarə et.</p>
        </div>

        <form action="#" method="post">
            <div class="profile-section">
                <div class="profile-image">
                    <div class="avatar-placeholder">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
                <div class="upload-button">
                    <button type="button" class="upload-btn">
                        <i class="fas fa-upload"></i> Şəkil yüklə
                    </button>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group half">
                    <label for="firstname">Adın</label>
                    <input type="text" id="firstname" name="firstname" value="Rəşad" required>
                </div>

                <div class="form-group half">
                    <label for="lastname">Soyadın</label>
                    <input type="text" id="lastname" name="lastname" value="Hüseynov" required>
                </div>
            </div>

            <div class="form-group">
                <label for="email">E-poçt ünvanın</label>
                <input type="email" id="email" name="email" value="reshad@gmail.com" required>
            </div>

            <div class="form-group">
                <label for="workplace">İş yeri ünvanın</label>
                <input type="text" id="workplace" name="workplace" value="Barber House Narimanov" required>
            </div>

            <div class="form-group">
                <label for="password">Şifrən</label>
                <div class="password-field">
                    <input type="password" id="password" name="password" value="••••••••••" required>
                    <span class="password-toggle">
                        <i class="fas fa-eye-slash"></i>
                    </span>
                </div>
            </div>

            <button type="submit" class="submit-btn">Qeydiyyatdan keç</button>

            <div class="login-link">
                <p>Hesabın var? <a asp-controller="Account" asp-action="Login">Daxil ol</a></p>
            </div>
        </form>
    </div>

    <script src="~/js/register_page.js">
    </script>
</body>
</html>