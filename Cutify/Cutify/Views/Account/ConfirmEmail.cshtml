@model ConfirmEmailVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifrəni dəyişdirin</title>
    <link rel="stylesheet" href="~/css/confirm_email_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="back-button">
            <a asp-controller="Account" asp-action="Login"><i class="fas fa-chevron-left"></i></a>
        </div>
        <h1>Şifrəni dəyişdirin</h1>
        <p>Təsdiq kodunu almaq üçün e-poçt ünvanını daxil edin.</p>

        <form asp-controller="Account" asp-action="ConfirmEmail" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit">Davam et</button>
        </form>
    </div>
</body>
</html>
