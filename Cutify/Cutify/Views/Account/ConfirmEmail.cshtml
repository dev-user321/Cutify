@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
    <link rel="stylesheet" href="~/css/confirm_email_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <div class="container">
        <div class="back-button">
            <a href="/Account/Login"><i class="fas fa-chevron-left"></i></a>
        </div>
        <h1>Şifrəni dəyişdirin</h1>
        <p>Təsdiq kodunu almaq üçün e-poçt ünvanını daxil edin.</p>
        <form action="/Account/VerifyEmail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="email">E-poçt ünvanın</label>
                <input type="email" id="email" name="email" value="reshad@gmail.com" required>
            </div>
            <button type="submit">Davam et</button>
        </form>
    </div>
</body>
</html>