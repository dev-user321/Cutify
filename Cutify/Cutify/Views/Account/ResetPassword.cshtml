@model ResetPasswordVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifrə Forması</title>
    <link rel="stylesheet" href="~/css/reset_password_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="back-button">
                <a asp-controller="Account" asp-action="ConfirmEmail"><i class="fas fa-chevron-left"></i></a>
            </div>
        </div>
        <div class="form-container">
            <h1>Yeni şifrə yarat</h1>
            <p class="description">Yeni, güclü və unikal şifrə yaradaraq hesabını gücləndir.</p>

            <form asp-controller="Account" asp-action="ResetPassword" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div class="input-container">
                        <input asp-for="Password" type="password" />
                        <button type="button" class="toggle-password">👁️</button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <div class="input-container">
                        <input asp-for="ConfirmPassword" type="password" />
                        <button type="button" class="toggle-password">👁️</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="submit-button">Yadda saxla</button>
            </form>
        </div>
    </div>

    <script src="~/js/reset_password_page.js"></script>
</body>
</html>
